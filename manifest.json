{
  "name": "The HAWK EYES",
  "description": "detect phishing websites",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["content.css"],
      "js": ["jquery-3.6.0.min.js","content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs", "webRequest"],
  "host_permissions": [
    "https://www.api.hawk-eyes.ca/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/main_icon.png",
      "32": "/images/main_icon.png",
      "48": "/images/main_icon.png",
      "128": "/images/main_icon.png"
    }
  },
  "icons": {
    "16": "/images/main_icon.png",
    "32": "/images/main_icon.png",
    "48": "/images/main_icon.png",
    "128": "/images/main_icon.png"
  },
  "options_page": "options.html"
}
